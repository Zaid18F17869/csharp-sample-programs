// Sample c# program to demostrate different math operations

using System;

class Operations 
{
    public void Addition(int a, int b)
    {
        int sum = 0;
        sum = a + b;
        Console.WriteLine("the addition is " + sum);
    }
    
    public void Subtration(int a, int b)
    {
        int difference = 0;
        difference = a - b;
        Console.WriteLine("the difference is " + difference);
    }
    
    public void Average(int a, int b)
    {   
        double average;
        average = (a+b) / 2;
        Console.WriteLine("The average is " + average);
    }
}
